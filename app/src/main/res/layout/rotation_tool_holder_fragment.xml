<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_text_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imageView_triangle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/imageHeight"
                app:srcCompat="@drawable/tool_holder"
                android:contentDescription="Image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingEnd="30dp"
                android:layout_marginBottom="100dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/defTextSize"
                        android:text="@string/D_outsideDiameter"
                        />
                    <include layout="@layout/dash_text_view" />

                    <EditText
                        android:id="@+id/editText_D"
                        android:layout_width="wrap_content"
                        android:layout_height="63dp"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxWidth="@dimen/maxWidthEditText"
                        android:minWidth="@dimen/minWidthEditText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/defTextSize"
                        android:text="@string/d_innerDiameter"
                        />

                    <include layout="@layout/dash_text_view" />

                    <EditText
                        android:id="@+id/editText_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/minWidthEditText"
                        android:maxWidth="@dimen/maxWidthEditText"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/defTextSize"
                        android:text="@string/L"
                        />

                    <include layout="@layout/dash_text_view" />

                    <EditText
                        android:id="@+id/editText_L"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/minWidthEditText"
                        android:maxWidth="@dimen/maxWidthEditText"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="-10dp"
                    android:paddingStart="-10dp"
                    android:paddingRight="-10dp"
                    android:paddingEnd="-10dp"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="20dp"
                        android:background="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/defTextSize"
                        android:text="@string/alpha"
                        />
                    <include layout="@layout/dash_text_view" />
                    <TextView
                        android:id="@+id/textView_alpha_RotAngToolHold"
                        android:textSize="@dimen/defTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>